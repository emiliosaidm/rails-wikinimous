<div class="container">
<div class="d-flex justify-content-between">
<h1>Articles</h1>
<div>
<%= link_to "Create New Article", new_path, class: "btn btn-primary mt-3" %>
</div>
</div>
<%@articles.each do |article|%>
<div class="card w-75">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <%= link_to "Read", article_path(article), class: "btn btn-primary" %>
  </div>
</div>
<br>
<% end %>
</div>
